<%= simple_form_for(@inquiry, html: { class: 'form-horizontal' }) do |f| %>
<div>Role</div>
    <%= f.collection_radio_buttons :role, [["host","Host"], ["waiter","Waiter"]], :first, :last %>
    <%= f.input :city %>
    <%= f.input :name %>
    <%= f.input :email, as: :email %>
    <%= f.input :phone, as: :tel %>
    <%= f.input :date, as: :date, :order => [:month, :day, :year] %>
    <div>License</div>
    <%= f.collection_radio_buttons :license, [[true, "Yes"], [false,"No"]], :first, :last %>
    <%= f.button :submit %> 
<% end %>